<!--    </welcome-file-list>-->
    
    <error-page>
        <location>/pages/error.jsp</location>
    </error-page>

    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.ecommerce.Controllers.AdminControllers.AdminFrontController</servlet-class>
    </servlet>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>AdminServlet</web-resource-name>
            <url-pattern>/Admin</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>easy-cart-admin</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>

    <security-role>
        <role-name>easy-cart-admin</role-name>
    </security-role>


    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/Admin</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>front</welcome-file>
    </welcome-file-list>

</web-app>
