    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>com.ecommerce.Controllers.FrontController.FrontController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/front</url-pattern>
    </servlet-mapping>

